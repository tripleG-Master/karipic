<h1 class="text-center display-3">My profile</h1>

<section class="d-flex justify-content-center my-3">

    <div class="card mb-3">
            <div class="col-md-4">
                <%= image_tag current_user.profile_picture, alt: "Profile Picture", class: "img-fluid rounded-start", style:"max-width:300px;" %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <p class="card-text">
                        <strong>Email:</strong> <%= current_user.email %>
                    </p>
                    <p class="card-text">
                        <strong>Admin:</strong>  
                        <% if current_user.admin? %> 
                            <i class="bi bi-check-lg text-success"></i>
                        <% else %>
                            <i class="bi bi-x-lg text-danger"></i>
                        <%end%>    
                    </p>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-center gap-3"> 
        <%= link_to "Back", :back, class: "btn btn-secondary" %> 
        <%= link_to "Edit profile", edit_user_registration_path, class: "btn btn-warning" %>
        <%= button_to "Close session", destroy_user_session_path, method: :delete, class: "btn btn-danger" %> 
    </div>

</section>

